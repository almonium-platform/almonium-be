[Unit]
Description=Almonium Backend Service
After=network.target docker.service

[Service]
User=kuzanoleg
WorkingDirectory=/home/kuzanoleg/almonium
TimeoutStartSec=600
ExecStart=/usr/bin/docker-compose up --no-deps --build -d
ExecReload=/usr/bin/docker-compose up --no-deps --build -d
ExecStop=/usr/bin/docker-compose stop
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
